<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:padding="10sp"
    android:gravity="center_horizontal"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="@drawable/boardback">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridView"
        android:columnCount="13"
        android:rowCount="10"
        android:padding="3sp"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:weightSum="30">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="10">
            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/tilePatch"
                android:textSize="100sp"
                android:textColor="@color/colorSand"
                android:background="@color/colorWhite"
                android:text="*"
                android:textStyle="bold"
                android:enabled="false"
                android:layout_gravity="center_vertical|center_horizontal" />
            <Button
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:id="@+id/peekButton"
                android:layout_gravity="center_vertical|center_horizontal" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="10">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="35dp"
                android:text="Human"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="40sp"
                android:id="@+id/nextPlayerLabel"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <NumberPicker
                android:layout_width="32dp"
                android:layout_height="90dp"
                android:layout_marginLeft="100dp"
                android:id="@+id/numberPicker"
                android:layout_gravity="center_vertical|center_horizontal"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:id="@+id/pruningCheck"
                android:layout_gravity="center_vertical|center_horizontal"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:weightSum="1">
            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:id="@+id/hintButton"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical|center_horizontal" />
            <Button
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/goButton"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical|center_horizontal" />
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="10">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="35dp"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="40sp"
                android:id="@+id/humanScoreLabel"
                android:layout_gravity="center_vertical|center_horizontal"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="160dp"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="40sp"
                android:id="@+id/computerScoreLabel"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="80sp"
                android:layout_marginTop="15dp"
                android:text="0.00 s"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="40sp"
                android:id="@+id/timeLabel"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical">
            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:id="@+id/saveButton"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginRight="40sp"/>
            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:id="@+id/resetButton"
                android:layout_gravity="center_vertical|center_horizontal"/>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>